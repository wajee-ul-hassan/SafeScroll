{
  "manifest_version": 3,
  "name": "Safescroll",
  "version": "1.0",
  "description": "Blurs hateful memes by detecting and filtering flagged images in the DOM.",
  "permissions": ["storage", "activeTab", "scripting", "tabs"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "safescroll.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["public/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "192": "safescroll.png"
  }
}
